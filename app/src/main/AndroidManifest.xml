<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="martinek.stepan.scorecounter"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".ScoreCounterApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".SettingsActivity">
        </activity>
        <activity
            android:name=".EditGameModeActivity"
            android:label="@string/title_activity_edit_game_mode">
        </activity>
        <activity
            android:name=".GameModeListActivity"
            android:label="@string/title_activity_game_mode_list">
        </activity>
    </application>

</manifest>
